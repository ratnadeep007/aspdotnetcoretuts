@model ASPNetCoreTutWeb.Models.MedicineModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit details</h2>

<h4>Edit details of @Html.DisplayFor(model => model.Name)</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
